<div class="posts-block wide">
    {% for post in posts limit: limit %}
        <div class="posts-latest">
            <div class="inner">
                <p>
                    {{label}} | {{post.data.date}}
                </p>
                <h2>
                    <a href="{{post.url}}">
                        {{post.data.pageTitle}}
                    </a>
                </h2>
                <p class="categories">
                    {% for cat in post.data.categories %}
                        <span>
                            {{cat}}
                        </span>
                    {% endfor %}
                </p>
            </div>
        </div>
    {% endfor %}
</div>

{% capture css %}
    {% include ../styles/highlighted.css %}
{% endcapture %}
<style>
    {{css | safe}}
</style>